
@{ 
    ViewData["Title"] = "Product Details"; 
} 

@model Project.Models.Product


<div class="product-section mt-150 mb-150">
    <div class="title_center"> <h2>Product Details</h2></div>
   
    <div class="product-detail-container">
       
    <div class="product-image">
        
        <img src="~/assets/img/products/@Model.Image" alt=""/>

    </div>

    <div class="product-info">
        <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Price:</strong> @Model.Price$ / Per Kg</p>

        @* @if (Model.DiscountPercent.HasValue && Model.DiscountDate <= DateTime.Now && Model.DiscountEndDate >= DateTime.Now) *@
        @* { *@
        @*     <p><strong>DiscountPercent:</strong> @Model.DiscountPercent% (From @Model.DiscountDate?.ToShortDateString() to @Model.DiscountEndDate?.ToShortDateString())</p> *@
        @* } *@

        <p><strong>Available quantity:</strong> @Model.Quantity fruits </p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Description:</strong></p>
        <p>@Model.Description</p>
        <a href="cart.html" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
    </div>
</div>
</div>

<style>
    .title_center {
        text-align: center;
        padding : 10px;
    }
    .product-detail-container {
        display: flex;
        gap: 50px;
        align-items: flex-start;
        padding: 20px;
        max-width: 900px;
        margin: 0 auto;
    }

    .product-image img {
        max-width: 300px;
        height: auto;
    }

    .product-info {
        flex: 1;
    }

    .product-info p {
        font-size: 16px;
        margin: 10px 0;
    }
</style>
